{* This is the welcome page, you can delete it *}

{block content}

<div class="main-panel white">
<h1>Games</h1>

{foreach $games as $game}
	<div class="game">
		<h2><a href="{link Game:show $game->id}">{$game->name}</a></h2>

		{if $game->image}
    		<img src="{$basePath}/{$game->image}" alt="Thumbnail">
		{/if}

		<div>{$game->description|truncate:256}</div>

        <div class="date">{$game->created_at|date:'F j, Y'}</div>
	</div>
	{/foreach}
</div>



